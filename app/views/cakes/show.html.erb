<h1><%= link_to @cake.name, cake_path(@cake) %></h1>
<hr />

<div class="row">
  <div class="span6">
    <ul class="thumbnails">
      <li class="span6">
        <a class="thumbnail" href="<%= url_for cake_path(@cake) %>"><img src="<%= @cake.photo.url %>" alt="<%= @cake.name %>" /></a>
      </li>
    </ul>
  </div>
</div>
